{% extends "layout.html.twig" %}
{% block title %}Register{% endblock %}
{% block content %}
    <h2>REGISTRATION</h2>
    <p class="reg-text">Please choose a Username and a Password.</p>
    <form action="#" method="post">
        <input type="hidden" name="form[token]" value="{{ form['token'] }}">
        <div>
            <h3><label for="form_username" class="required">Username</label></h3>
            <input type="text" id="form_username" name="form[username]"
                   required="required" value={{ form['username'] }}>
            <div><br></div>
            {% if error['username'] %}
                <p>{{ error['username'] }}</p>
            {% endif %}
            <h3><label for="form_password" class="required">Password</label></h3>
            <input type="password" id="form_password" name="form[password]"
                   required="required" value={{ form['password'] }}>
            <div><br></div>
            {% if error['password'] %}
                <p>{{ error['password'] }}</p>
            {% endif %}
        </div>
        <button type="submit" id="form_save"
                name="form[save]">Register
        </button>
    </form>
{% endblock %}

